/* components/content/content.wxss */
.text {
  color: #b1b1b1;
  font-size: 20rpx;
}
.content {
  width: 100%;
  background-color: #fff;
}
.title {
  padding-left: 30rpx;
  width: 100%;
  height: 80rpx;
  color: #000;
  font-size: 30rpx;
  line-height: 80rpx;
  border-bottom: 2rpx solid #dedfe0;
}
.time {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}

.main-item {
  width: 690rpx;
  margin: 10rpx auto;
  border-bottom: 2rpx solid #dedfe0;
}

.news {
  width: 100%;
  box-sizing: border-box;
  color: #292929;
  font-size: 30rpx;
  line-height: 50rpx;
  font-family: sans-serif;

  display: -webkit-box; 
  /*规定子元素的排列方向 */
  -webkit-box-orient: vertical; 
  /*实现多余的文字隐藏并用省略号来代表被隐藏的文字  */
  overflow: hidden;
  text-overflow:ellipsis;
}
.state {
  color: #576b95;
  font-size: 30rpx;
}
.ellipsis {
  -webkit-line-clamp: 6;
}
.unellipsis {
  -webkit-line-clamp: 0;
}
.image {
  width: 100%;
  box-sizing: border-box;
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.one image {
  border-radius: 5rpx;
  width: 690rpx;
}

.more image {
  border-radius: 5rpx;
  width: 225rpx;
  height: 225rpx;
}

.from {
  height: 50rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-start;
}
.from view { 
  display: inline-block;
  height: 50rpx;
  line-height: 50rpx;
}
.from-image image{
  margin-left: 10rpx;
  margin-right: 10rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.icons {
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}
.icons view {
  height: 80rpx;
  line-height: 80rpx;
}




