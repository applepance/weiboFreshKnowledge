,<view class="card-wrapper" >
    <view class="card-wrapper-up" bind:tap="goInner">
        <view class="card-title">
        <text>{{title}}</text>
    </view>
    <view class="card-tag">
            <text decode="true">{{isOld?'更新':'创建'}}时间: </text>
            <text>{{time}}</text>
            <view class="card-tag-focus">
            <icon class="wode" type="wode" size="28" color="#b1b1b1"></icon>
            <span class="focus_num">{{focusNum}}</span>
            </view>        
    </view>
    <image class="img" mode="aspectFill" src="{{imgUrl}}"></image>
    </view>
    <button class="card-share" open-type='share' bind:tap='onShareAppMessage'>
        <icon class="fenxiang" type="fenxiang" color="#f7ca4b" size="30"></icon>
        <span>分享</span>
    </button>
</view>
